{% extends 'index_base.jinja2' %}

{% block content %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <br>
    <div class="ui labeled button" tabindex="0">

        <div class="ui teal right pointing label">(Cloud Provider)</div>
        <div class="ui basic blue right pointing label"> (AS Holder)</div>
        <div class="ui red right pointing button label"> (IP address)</div>
        <div class="ui grey button label"> (Host) </div>
    </div>
    <br>
    <br>

    {% if hosting_table is defined %}
        <div class="ui relaxed divided list">

        {% for hostname, host_details in hosting_table.items() %}
            <div class="item">
                    <div class="ui huge header green" style="font-family: monospace">{{ hostname }}</div>
                    <div class="meta">
                    </div>
                    <div class="ui relaxed divided list">
                        {% if 'ip_info' in host_details and host_details['ip_info'] is not none %}
                            {% for ip_info in host_details['ip_info'] %}
                                <div class="item">
                                    <br>
                                    <div class="medium header" style="font-family: monospace">
                                        <div class="ui labeled button" tabindex="0">
                                            {% if ip_info["cloud_provider"] is not none %}
                                                <div class="ui teal right pointing label">
                                                    {{ ip_info["cloud_provider"] }}
                                                </div>
                                            {% endif %}
                                            <div class="ui basic blue right pointing label">
                                                {{ ip_info["as_holder"] }}
                                            </div>
                                            <div class="ui red right pointing button label">
                                                {{ ip_info["ip_address"] }}{% for i in range(15-(ip_info["ip_address"]|length)) %}&numsp;{% endfor %}
                                            </div>
                                            <div class="ui grey button label">
                                                {{ hostname }}
                                            </div>
                                        </div>

                                        <div class="ui accordion">
                                            <div class=" title" id="show_more_{{ ip_info["ip_address"] }}">
                                            </div>
                                            <div class=" content">
                                                <div class="ui divided selection list">

                                                    <div class="item">
                                                        <div class="ui grey horizontal label">Hostname</div>
                                                            {{ hostname }}
                                                    </div>
                                                    <div class="item">
                                                        <div class="ui purple horizontal label">DNS Responder</div>
                                                        {{ ip_info["dns_responder"] }}
                                                    </div>
                                                    <div class="item">
                                                        <div class="ui red horizontal label">Address</div>
                                                        {{ ip_info["ip_address"] }}
                                                    </div>
                                                <div class="item">
                                                        <div class="ui blue horizontal label">ASN</div>
                                                        {{ ip_info["asn"] }}
                                                    </div>
                                                    <div class="item">
                                                        <div class="ui blue horizontal label">AS Prefix</div>
                                                        {{ ip_info["as_prefix"] }}
                                                    </div>
                                                    <div class="item">
                                                        <div class="ui blue horizontal label">AS Holder</div>
                                                        {{ ip_info["as_holder"] }}
                                                    </div>
                                                        <div class="item">
                                                            <div class="ui teal horizontal label">Cloud Provider</div>
                                                            {{ ip_info["cloud_provider"] }}
                                                        </div>
                                                        <div class="item">
                                                            <div class="ui teal horizontal label">Cloud Provider Prefix
                                                            </div>
                                                            {{ ip_info["cloud_provider_prefix"] }}
                                                        </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            </div>
                        {% endif %}
                </div>
        {% endfor %}
        </div>
    {% endif %}
{% endblock %}